<aside class="sidebar">
  <div class="logo">
    <%= image_tag "cplogo.png" %>
    <h2>CatParadise</h2>
  </div>
  <% if admin_signed_in? %>
    <ul class="links">
      <hr>
      <h4>Main Menu</h4>
      <li>
        <span><i class="fa-solid fa-house"></i></span>
        <%= link_to "ホーム", admin_root_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-users"></i></span>
        <%= link_to "ユーザー一覧", admin_users_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-pager"></i></span>
        <%= link_to "全投稿", admin_all_posts_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-comments"></i></span>
        <%= link_to "全コメント", admin_all_comments_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-cat"></i></span>
        <%= link_to "猫種一覧", admin_breeds_path %>
      </li>
      <hr>
      <h4>Management</h4>
      <li>
        <span><i class="fa-solid fa-envelope-open-text"></i></span>
        <%= link_to "問い合わせ一覧", admin_contacts_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-triangle-exclamation"></i></span>
        <%= link_to "通報一覧", admin_reports_path %>
      </li>
      <hr>
      <h4>System</h4>
      <li>
        <span><i class="fa-solid fa-right-from-bracket"></i></span>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    </ul>
  <% elsif user_signed_in? %>
    <ul class="links">
      <hr>
      <h4>Main Menu</h4>
      <li>
        <span><i class="fa-solid fa-house"></i></span>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-pager"></i></span>
        <%= link_to "All Posts", all_posts_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-cat"></i></span>
        <%= link_to "All Cats", all_cats_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-users"></i></span>
        <%= link_to "All Users", users_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-map-location-dot"></i></span>
        <%= link_to "Cat Map", maps_path %>
      </li>
      <hr>
      <h4>My Page</h4>
      <li>
        <span><i class="fa-solid fa-user"></i></span>
        <%= link_to "My Page", user_path(current_user) %>
      </li>
      <li>
        <span><i class="fa-solid fa-mobile-screen"></i></span>
        <%= link_to "My Posts", user_posts_path(current_user) %>
      </li>
      <li>
        <span><i class="fa-solid fa-paw"></i></span>
        <%= link_to "My Cats", user_cats_path(current_user) %>
      </li>
      <li>
        <span><i class="fa-solid fa-toolbox"></i></span>
        <%= link_to "My Items", user_items_path(current_user) %>
      </li>
      <li>
        <span><i class="fa-solid fa-user-group"></i></span>
        <%= link_to "Connections", user_relationships_path(current_user) %>
      </li>
      <li>
        <span><i class="fa-solid fa-heart"></i></span>
        <%= link_to "Favorites", favorites_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-bookmark"></i></span>
        <%= link_to "Bookmarks", bookmarks_path %>
      </li>
      <hr>
      <h4>System</h4>
      <li>
        <% notifications_count = Notification.where(visited_id: current_user.id, checked: false).count %>
        <% if notifications_count > 0 %>
          <span class="mother-bell">
            <i class="fa-sharp fa-solid fa-bell"></i>
            <span class="notification-circle">
              <%= notifications_count > 9 ? '9+' : notifications_count %>
            </span>
          </span>
        <% else %>
          <i class="fa-sharp fa-solid fa-bell"></i>
        <% end %>
        <%= link_to "Notifications", notifications_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-envelope-open-text"></i></span>
        <%= link_to "Contact us", "#", class: "modal-link", data: { toggle: "modal", target: "#contact-us" } %>
      </li>
      <li>
        <span><i class="fa-solid fa-right-from-bracket"></i></span>
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      </li>
    </ul>
  <% else %>
    <ul class="links">
      <hr>
      <h4>Main Menu</h4>
      <li>
        <span><i class="fa-solid fa-house"></i></span>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-pager"></i></span>
        <%= link_to "All Posts", all_posts_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-cat"></i></span>
        <%= link_to "All Cats", all_cats_path %>
      </li>
      <li>
        <span><i class="fa-solid fa-map-location-dot"></i></span>
        <%= link_to "Cat Map", maps_path %>
      </li>
      <hr>
      <h4>System</h4>
      <li>
        <span><i class="fa-solid fa-envelope-open-text"></i></span>
        <%= link_to "Contact us", "#", class: "modal-link", data: { toggle: "modal", target: "#contact-us" } %>
      </li>
    </ul>
  <% end %>
</aside>