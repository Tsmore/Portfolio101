<% if post.favorited_by?(current_user) %>
  <%= link_to user_post_favorites_path(user_id: current_user.id, post_id: post.id), method: :delete, remote: true do %>
    <i class="fa-solid fa-heart"></i>&nbsp;<%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to user_post_favorites_path(user_id: current_user.id, post_id: post.id), method: :post, remote: true do %>
    <i class="fa-regular fa-heart"></i>&nbsp;<%= post.favorites.count %>
  <% end %>
<% end %>