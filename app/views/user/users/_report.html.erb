<div class="modal fade" id="report-user" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">通報する</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: report, url: user_reports_path(current_user) do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.hidden_field :reportable_id, value: user.id %>
            <%= f.hidden_field :reportable_type, value: 'User' %>
          </div>
          <div class="form-group">
            <%= f.text_area :reason, rows: 5, placeholder: "ユーザーの通報理由や内容を記入してください", class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn-black" data-dismiss="modal">閉じる</button>
          <%= f.submit '通報する', class: "btn-black" %>
        </div>
      <% end %>
    </div>
  </div>
</div>