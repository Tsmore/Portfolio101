<div class="modal fade" id="report-user" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">通報する</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: report, url: user_reports_path(current_user) do |f| %>
        <div class="modal-body">
          <%= f.hidden_field :reportable_id, value: user.id %>
          <%= f.hidden_field :reportable_type, value: 'User' %>
          <%= f.text_area :reason, placeholder: "通報理由" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit '通報する' %>
        </div>
      <% end %>
    </div>
  </div>
</div>