<div class="modal fade" id="userinfo-edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">編集する</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: user do |f| %>
        <div class="modal-body">
            <div class="form-group">
              <%= f.label :ユーザーネーム, class: "control-label" %>
              <%= f.text_field :username, placeholder: "Your Username...", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :プロフィール画像, class: "control-label" %>
              <div class="custom-file">
                <%= f.file_field :user_image, id: "user_image", class: "custom-file-input" %>
                <%= f.label "ファイルを選択", class: "btn-black custom-file-button" %>
              </div>
              <img id="image_preview" src="#" alt="your image" style="display: none; max-width: 200px; max-height: 200px;" />
            </div>
            <div class="form-group">
              <%= f.label :紹介文, class: "control-label" %>
              <%= f.text_area :introduction, rows: 5, placeholder: "Your Introduction...", class: "form-control" %>
            </div>
        </div>
        <div class="modal-footer">
          <button class="btn-black" data-dismiss="modal">Close</button>
          <%= f.submit '編集', class: "btn-green" %>
        </div>
      <% end %>
    </div>
  </div>
</div>