<div class="container body">
  <div class="row">
    <div class="col">
      <div class="messages-list shadow p-3 mb-5 bg-white rounded">
        <h2>Message with:</h2>
        <h4><%= image_tag @user.profile_image %><%= @user.username %></h4>
        <div class="actual-messages">
          <% @messages.each do |message| %>
            <%= render 'user/messages/messages', message: message %>
          <% end %>
        </div>
        <%= render 'layouts/error_messages', obj: @message %>
        <div class="form-group pt-5">
          <%= render 'user/messages/message_form', message: @message %>
        </div>
      </div>
    </div>
  </div>
</div>