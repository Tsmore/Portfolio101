<% if message.user == current_user %>
  <div class="row mb-1 justify-message-end" id="message_<%= message.id %>">
    <div class="col-auto">
      <%# link_to message, method: :delete data: {confirm: "Delete"} do %>
        <div class="card bg-info text-white" style="height: 30px;">
          <div class="d-flex align-items-center h-100">
            <div class="card-body text-center">
              <%= message.message %>
            </div>
          </div>
        </div>
      <%# end %>
    </div>
    <div class="col-auto">
      <%= image_tag message.user.profile_image %>
      <%= message.created_at.strftime('%H:%M') %>
    </div>
  </div>
<% else %>
  <div class="row mb-1">
    <div class="col-auto">
      <%= message.created_at.strftime('%H:%M') %>
      <%= image_tag message.user.profile_image %>
    </div>
    <div class="col-auto">
      <div class="card bg-secondary text-white" style="height: 30px;">
        <div class="d-flex align-items-center h-100">
          <div class="card-body text-center">
            <%= message.message %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>