<% if post.find_bookmark(current_user).blank? %>
  <%= link_to post_bookmarks_path(post), method: :post, remote: true do %>
    <i class="fa-regular fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmark_path(post, post.find_bookmark(current_user)), method: :delete, remote: true do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% end %>