<% if post.find_bookmark(current_user).blank? %>
  <%= link_to user_post_bookmarks_path(user_id: current_user.id, post_id: post.id), method: :post, remote: true do %>
    <i class="fa-regular fa-bookmark"></i>
  <% end %>
<% else %>
  <% bookmark = post.find_bookmark(current_user) %>
  <%= link_to user_post_bookmark_path(user_id: current_user.id, post_id: post.id, id: bookmark.id), method: :delete, remote: true do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% end %>
