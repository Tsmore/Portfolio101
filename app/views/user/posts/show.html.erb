<div class="container body">
  <div class="row">
    <div class="col">
      <% if current_user.id != @post.user.id %>
        <%= image_tag @post.user.profile_image %>
        <%= @post.user.username %>
      <% end %>
      <%= @post.title %>
      <%= @post.body %>
      <% if @post.tags.any? %>
        <div class="post-tags">
          tag:
          <% @post.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </div>
      <% end %>
      <%= image_tag @post.post_image if @post.post_image.present? %>
      <%= render 'user/comments/new_comment', comment: @comment, post: @post %>
    </div>
  </div>
</div>