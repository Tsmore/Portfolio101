<div class="modal fade" id="new-post" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: post, url: user_posts_path(current_user) do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :タイトル, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :内容, class: "form-label" %>
            <%= f.text_area :body, rows: 5, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label 'タグ (スペースで区切ってください)', class: "form-label" %>
            <%= f.text_field :tag_list, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :写真, class: "form-label" %>
            <div class="custom-file">
              <%= f.file_field :post_image, multiple: true, accept: 'image/*', class: "custom-file-input images_upload" %>
              <%= f.label "ファイルを選択", class: "btn-black custom-file-button" %>
            </div>
            <div id="images_preview_container"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn-black" data-dismiss="modal">閉じる</button>
          <%= f.submit "投稿", class: "btn-blue" %>
        </div>
      <% end %>
    </div>
  </div>
</div>