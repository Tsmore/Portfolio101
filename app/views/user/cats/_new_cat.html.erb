<div class="modal fade" id="add-new-cats" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">使用製品追加</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: cat, url: user_cats_path do |f| %>
        <div class="modal-body">
            <div class="form-group">
              <%= f.label :猫の名前 %>
              <%= f.text_field :name %>
            </div>
            <div class="form-group">
              <%= f.label :猫の写真 %>
              <%= f.file_field :cat_image %>
            </div>
            <div class="form-group">
              <%= f.label :紹介文 %>
              <%= f.text_area :introduction %>
            </div>
            <div class="form-group">
              <%= f.label :猫種 %>
              <%= f.collection_select :breed_id, Breed.all, :id, :name, include_blank: '選択してください' %>
            </div>
            <div class="form-group">
              <%= f.label :性別 %>
              <%= f.select :sex, Cat.sexes.keys.map { |k| [I18n.t("activerecord.attributes.cat.sexes.#{k}"), k] }, { include_blank: '選択してください' } %>
            </div>
            <div class="form-group">
              <%= f.label :誕生日 %>
              <%= f.date_field :date_of_birth %>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>