<% post.post_image.each do |image| %>
  <div class="modal fade" id="singleImageModal<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg post-image-modal modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <%= image_tag image, class: "img-fluid" if image.present? %>
        </div>
      </div>
    </div>
  </div>
<% end %>