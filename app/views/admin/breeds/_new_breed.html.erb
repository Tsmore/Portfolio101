<div class="modal fade" id="add-new-breeds" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">猫種追加</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model: breed, url: admin_breeds_path do |f| %>
            <div class="form-group">
              <%= f.label :猫種, class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn-black" data-dismiss="modal">閉じる</button>
            <%= f.submit "登録", class: "btn-blue" %>
        <% end %>
      </div>
    </div>
  </div>
</div>