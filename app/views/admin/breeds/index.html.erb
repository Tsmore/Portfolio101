<div class="container body">
  <div class="row">
    <h3 class="title-black">猫種一覧</h3>
  </div>
  <div class="row mt-4">
    <div class="col-2">
    <h4><button type="button" class="btn-blue" data-toggle="modal" data-target="#add-new-breeds">猫種登録</button></h4>
    <%= render 'admin/breeds/new_breed', breed: @breed %>
    </div>
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>猫種</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @breeds.each do |breed| %>
            <tr>
              <td><%= breed.name %></td>
              <td><%= link_to '編集', edit_admin_breed_path(breed), class: "btn-green" %></td>
              <td><%= link_to '削除', admin_breed_path(breed), method: :delete, data: {confirm: '削除しますか？'}, class: "btn-red" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>