<div class="container body">
  <div class="row">
    <h3 class="title-black">問い合わせ</h3>
  </div>
  <div class="row mt-3">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <% if @contact.user_id.present? %>
            ユーザー名: <%= @contact.user.username %>
          <% else %>
            <% if @contact.name.present? %>
              <p>名前: <%= @contact.name %></p>
              <p>メールアドレス: <%= @contact.email %></p>
            <% else %>
              <p>名前: 匿名</p>
              <p>メールアドレス: <%= @contact.email %></p>
            <% end %>
          <% end %>
        </div>
        <div class="card-body">
          <h6 class="card-title">
            件名: <%= @contact.title %>
          </h6>
          <p class="card-text">
            内容: <%= simple_format(@contact.body) %>
          </p>
          <p class="card-text">
            <%= @contact.created_at.strftime('%Y/%m/%d') %>
            <%= @contact.created_at.strftime('%H:%M') %>
          </p>
          <p class="card-text">
            <% if @contact.is_checked == false %>
              <%= link_to "未対応", admin_contact_path(@contact), method: :patch, class: "btn-red" %>
            <% else %>
              <%= link_to "対応済み", admin_contact_path(@contact), method: :patch, class: "btn-green" %>
            <% end %>
          </p>
          <p class="card-text"></p>
          <p class="card-text"></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row"></div>
</div>